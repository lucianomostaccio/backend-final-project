<section
  class="py-12 md:py-20 bg-gray-100 dark:bg-gray-800"
  style="padding-top: 3rem !important;"
>
  <div class="container mx-auto px-4 md:px-6">
    <div class="flex items-center justify-between mb-8">
      <h2
        class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-gray-50"
        id="titleProductsPage"
      >All Products</h2>
      <div class="flex items-center gap-4 relative"><button
          class="justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2 flex items-center gap-2 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 focus:ring-primary focus:border-primary dark:focus:ring-primary dark:focus:border-primary hover:border-green-500"
          type="button"
          id="filter-button"
          aria-haspopup="menu"
          aria-expanded="false"
          data-state="closed"
        ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5 dark:text-gray-300"
          ><polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3">
            </polygon>
          </svg>
          <span class="dark:text-gray-300">Filters</span>
        </button>
        <div
          id="filter-menu"
          class="hidden absolute right-0 top-full mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 divide-y divide-gray-100 focus:outline-none"
          role="menu"
          aria-orientation="vertical"
          aria-labelledby="filter-menu-button"
          tabindex="-1"
        >
          <div class="py-1" role="none">
            <h3
              class="px-4 py-2 text-sm font-medium text-gray-900"
            >Categories</h3>
            <div id="category-filters" class="px-4 py-2">
              {{#each (uniqBy products "category") as |product|}}
                <div class="flex items-center mb-2 cursor-pointer">
                  <input
                    id="category-{{@index}}"
                    type="checkbox"
                    name="category"
                    value="{{product.category}}"
                    class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded cursor-pointer"
                  />
                  <label
                    for="category-{{@index}}"
                    class="ml-2 text-sm text-gray-700 cursor-pointer"
                  >{{product.category}}</label>
                </div>
              {{/each}}
            </div>
          </div>
          <div class="py-1" role="none">
            <div class="flex items-center px-4 py-2">
              <input
                id="featured-filter"
                type="checkbox"
                class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded cursor-pointer"
              />
              <label
                for="featured-filter"
                class="ml-2 text-sm text-gray-700 cursor-pointer"
              >Featured</label>
            </div>
            <div class="flex items-center px-4 py-2">
              <input
                id="trending-filter"
                type="checkbox"
                class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded cursor-pointer"
              />
              <label
                for="trending-filter"
                class="ml-2 text-sm text-gray-700 cursor-pointer"
              >Trending</label>
            </div>
          </div>
        </div>
        <button
          class="justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2 flex items-center gap-2 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 focus:ring-primary focus:border-primary dark:focus:ring-primary dark:focus:border-primary hover:border-green-500"
          type="button"
          id="sort-button"
          aria-haspopup="menu"
          aria-expanded="false"
          data-state="closed"
        ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5 dark:text-gray-300"
          >
            <line x1="10" x2="21" y1="6" y2="6">

            </line>
            <line x1="10" x2="21" y1="12" y2="12">
            </line>
            <line x1="10" x2="21" y1="18" y2="18">

            </line>
            <path d="M4 6h1v4">
            </path>
            <path d="M4 10h2">

            </path>
            <path d="M6 18H4c0-1 2-2 2-3s-1-1.5-2-1">
            </path>
          </svg>
          <span class="dark:text-gray-300">
            Sort
          </span>
        </button>
        <div
          id="sort-menu"
          class="hidden origin-top-right absolute right-0 top-full mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
          role="menu"
          aria-orientation="vertical"
          aria-labelledby="sort-menu-button"
          tabindex="-1"
        >
          <div class="py-1" role="none">
            <a
              href="#"
              class="sort-option text-gray-700 block px-4 py-2 text-sm"
              role="menuitem"
              tabindex="-1"
              data-sort="price-asc"
            >Price: Low to High</a>
            <a
              href="#"
              class="sort-option text-gray-700 block px-4 py-2 text-sm"
              role="menuitem"
              tabindex="-1"
              data-sort="price-desc"
            >Price: High to Low</a>
            <a
              href="#"
              class="sort-option text-gray-700 block px-4 py-2 text-sm"
              role="menuitem"
              tabindex="-1"
              data-sort="name-asc"
            >Name: A to Z</a>
            <a
              href="#"
              class="sort-option text-gray-700 block px-4 py-2 text-sm"
              role="menuitem"
              tabindex="-1"
              data-sort="name-desc"
            >Name: Z to A</a>
          </div></div>
      </div>
    </div>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8"
    >
      {{#each products}}
        <div
          class="product-card bg-white dark:bg-gray-900 rounded-lg shadow-sm hover:shadow-md transition-shadow flex flex-col h-full"
        >
          <img
            src="{{getFirstValidThumbnail thumbnails}}"
            alt="Product image"
            width="400"
            height="400"
            class="rounded-t-lg object-cover w-full h-56"
            style="aspect-ratio: 400 / 400; object-fit: cover;"
          />
          <div class="p-4 flex flex-col flex-grow">
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-gray-50"
            >{{title}}</h3>
            <p
              class="text-gray-500 dark:text-gray-400 mb-4 flex-grow"
            >{{description}}</p>
            <div class="flex items-center justify-between mt-auto">
              <span
                class="text-xl font-bold text-gray-900 dark:text-gray-50"
              >{{formatPrice price}}</span>
              <button
                class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium ring-offset-background transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-9 rounded-md px-3 bg-gray-400 text-gray-50 hover:bg-gray-600 dark:bg-primary-400 dark:text-gray-900 dark:hover:bg-primary-500"
                type="button"
                onclick="addProductToCart(event, '{{_id}}')"
              >
                Add to Cart
              </button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>

<script src="/js/products.js"></script>
<div id="loginContainer">
  <div id="loginPicForms">
    <section id="loginSection">
      <header>
        <h1>Welcome back!</h1>
      </header>
      <form id="loginForm">
        <div class="form-group">
          <label for="email">email<span class="required">*</span></label>
          <input
            type="email"
            name="email"
            placeholder="input your email"
            autocomplete="on"
          /><br />
        </div>
        <div class="form-group">
          <label for="password">password<span class="required">*</span></label>
          <input
            name="password"
            type="password"
            placeholder="input your password"
          /><br />
        </div>
        <div class="rememberForgotContainer">
          <div id="rememberContainer">
            <input type="checkbox" id="remember" />
            <label for="remember" id="rememberText">Remember me</label>
          </div>
          <label>
            <a href="/resetpass">Forgot your password?</a>
          </label>
        </div>
        <button class="greenButton" type="submit">Login!</button>
        <div id="footerLoginForm">

          <div id="thirdPartyLogin">
            <p>Or login with</p>
            <a
              href="https://github.com/login/oauth/authorize?client_id=YOUR_CLIENT_ID"
              class="github-btn"
            >
              <img
                src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png"
                alt="GitHub Logo"
                style="height: 20px;"
              />
              Sign in with GitHub
            </a>

          </div>
          <div id="register">
            <p>Don't have an account? <a href="/register">Register Here</a></p>
          </div>
        </div>
      </form>
    </section>
    <section id="loginPictureSection">
      <img src="https://placehold.co/550x600/png" alt="" />
    </section>
  </div>
  <br />

</div>
<link rel="stylesheet" href="/css/login.css" />
<script src="/js/login.js"></script>
<div
  class="max-w-md w-full space-y-8 p-6 bg-white dark:bg-gray-900 rounded-lg shadow-md my-12"
>
  <div>
    <h2
      class="text-center text-3xl font-bold text-gray-900 dark:text-gray-50"
    >Sign in to your account</h2>
  </div>
  <form id="loginForm" class="space-y-6">
    <div>
      <label
        class="peer-disabled:cursor-not-allowed peer-disabled:opacity-70 block text-sm font-medium text-gray-700 dark:text-gray-300"
        for="email"
      >
        Email address
      </label>
      <div class="mt-1">
        <input
          class="h-10 bg-background text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus:outline focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-primary active-focus:outline focus:ring-primary sm:text-sm dark:bg-gray-800 dark:border-gray-700 dark:text-gray-50"
          name="email"
          id="email"
          autocomplete="email"
          required
          type="email"
          value=""
        />
      </div>
    </div>
    <div>
      <label
        class="peer-disabled:cursor-not-allowed peer-disabled:opacity-70 block text-sm font-medium text-gray-700 dark:text-gray-300"
        for="password"
        name="password"
      >
        Password
      </label>
      <div class="mt-1">
        <input
          class="h-10 bg-background text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus:outlinefocus-visible:ring-2 focus:ring-ring focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-primary focus:outline focus:ring-primary sm:text-sm dark:bg-gray-800 dark:border-gray-700 dark:text-gray-50"
          id="password"
          autocomplete="on"
          name="password"
          required
          type="password"
          value=""
        />
      </div>
    </div>
    <div class="flex items-center justify-between"><div
        class="flex items-center"
      ><input
          aria-hidden="true"
          id="remember"
          name="remember"
          tabindex="-1"
          type="checkbox"
          value="on"
          style="margin: 0px; width: 16px; height: 16px;"
          class="outline-none focus:outlinefocus-visible:ring-2 focus:ring-ring focus:ring-offset-2 rounded-md border border-gray-300 focus:border-primary focus:outline focus:ring-primary sm:text-sm dark:bg-gray-800 dark:border-gray-700 dark:text-gray-50"
        /><label
          class="font-medium ml-2 block text-sm text-gray-900 dark:text-gray-50"
          for="remember"
          id="rememberText"
        >Remember me</label>
      </div>
      <div class="text-sm"><a
          class="font-medium text-primary hover:underline dark:text-primary-400"
          href="/resetpass"
          rel="ugc"
        >
          Forgot your password?
        </a></div></div>
    <div>
      <button
        class="items-center whitespace-nowrap ring-offset-background transition-colors focus:outline focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-10 flex w-full justify-center rounded-md border border-transparent bg-black py-2 px-4 text-sm font-medium text-gray-50 shadow-sm hover:bg-primary-600 active-focus:outline active-focus:ring-2 focus:ring-primary active-focus:ring-offset-2 dark:bg-primary-400 dark:text-gray-900 dark:hover:bg-primary-500"
        type="submit"
      >Sign in</button>
    </div>
    <div class="flex items-center justify-center">
      <button
        class="bttn items-center whitespace-nowrap ring-offset-background transition-colors focus:outline focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-background hover:text-accent-foreground h-10 flex w-full justify-center rounded-md border border-gray-300 py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 active-focus:outline active-focus:ring-2 focus:ring-primary active-focus:ring-offset-2 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-800 dark:hover:text-gray-50 dark:focus:ring-primary-400"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="mr-2 h-5 w-5"
        >
          <path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path>
          <path d="M9 18c-4.51 2-5-2-7-2"></path>
        </svg>
        Sign in with GitHub
      </button>

    </div>
    <div id="register">
      <p class="text-center">Don't have an account?
        <a href="/register">Register Here</a></p>
    </div>
  </form>
</div>

<script src="/js/login.js"></script>